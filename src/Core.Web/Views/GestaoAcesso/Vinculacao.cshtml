@model Core.Business.ViewModels.Identity.UsuarioVinculadoViewModel

@{
    ViewData["Module"] = "Gestão de Acesso";
    ViewData["Title"] = "Vinculação";
}

<div class="card">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">

        <form asp-action="Vinculacao">

            <div class="row">
                <div class="col-md-4">

                    @await Component.InvokeAsync("Summary")

                    <input asp-for="MATRICULA_GERENTE" type="hidden">
                    <input asp-for="NOME_GERENTE" type="hidden">

                    <div class="form-group">
                        <label asp-for="NOME_GERENTE" class="control-label"></label>
                        <input disabled asp-for="NOME_GERENTE" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="MatriculasVinculadas" class="control-label"></label>
                        <select asp-for="MatriculasVinculadas" asp-items="@ViewBag.DropDownApoios" class="form-control select2-usuarios-caixa" multiple></select>
                        <span asp-validation-for="MatriculasVinculadas" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
