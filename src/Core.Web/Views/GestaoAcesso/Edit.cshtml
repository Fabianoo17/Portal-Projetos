@model UsuarioAcessoCreateEditViewModel

@{
    ViewData["Module"] = "Gestão de Acesso";
    ViewData["Title"] = "Alterar usuário";
}

<div class="card">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            @await Component.InvokeAsync("Summary")
            
            <input asp-for="Matricula" type="hidden"> 
          
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <select disabled asp-for="Matricula" class="form-control" asp-items="@ViewBag.DropdownUsuarios"></select>
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perfis" class="control-label"></label>
                <select asp-for="Perfis" asp-items="@ViewBag.DropdownPerfis" multiple class="form-control select2"></select>
                <span asp-validation-for="Perfis" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

